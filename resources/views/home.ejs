<section class="main py-16">
    <div class="container mx-auto flex items-center justify-between ">
        <div class="w-1/2">
            <h6 class="text-lg py-2"><em>Are you Hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold py-2">Don't Wait !</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">
                Order Now
            </button>
        </div>
        <div class="w-1/2">
            <img class="rounded-t-lg rounded-b-lg" src="/img/Main_3.png " alt="">

        </div>
    </div>

</section>
<section  class="menu conatiner mx-auto py-8 px-8">
    <h1 class="text-xl font-bold mb-8">All Dishes</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-12 gap-y-16">
        <% dishes.forEach(function(dish) { %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto rounded-t-lg rounded-b-lg" src="/img/<%= dish.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg "><%= dish.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= dish.size%></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg"> â‚¹<%= dish.price %></span>
                    <button data-dish="<%= JSON.stringify(dish) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    
</section>
